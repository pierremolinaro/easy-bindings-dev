  %    %!mAttributeName%.undoRegisterFonction = {(oldValue : NSObject) in\n%
  %      self.mUndoManager?.registerUndoWithTarget (self, selector:"undoFor_%!mAttributeName%:", object:oldValue)\n%
  %    }\n%
