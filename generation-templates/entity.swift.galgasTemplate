  override func setUpWithDictionary (inDictionary : NSDictionary,
                                     managedObjectArray : Array<PMManagedObject>) {
    super.setUpWithDictionary (inDictionary, managedObjectArray:managedObjectArray)
%for () in ATTRIBUTE_LIST_FOR_GENERATION do
%    %!mAttributeName%.setProp (inDictionary.read%![mAttributeType swiftTypeName]% ("%!mAttributeName%"))\n%
end
for () in ENTITY_CURRENT_RELATIONSHIP_LIST do
  if mIsToMany then
%    %!mRelationshipName%.props = readEntityArrayFromDictionary (
        "%!mRelationshipName%",
        inDictionary:inDictionary,
        managedObjectArray:managedObjectArray
      ) as! Array<%![mRelationshipType key]%>\n%
  elsif not mOppositeRelationshipIsToMany then
%    %!mRelationshipName%.prop = readEntityFromDictionary (
        "%!mRelationshipName%",
        inDictionary:inDictionary,
        managedObjectArray:managedObjectArray
      ) as? %![mRelationshipType key]%\n%
  end
end
%  }

  //-------------------------------------------------------------------------------------------------------------------*
  //   accessibleObjects                                                                                               *
