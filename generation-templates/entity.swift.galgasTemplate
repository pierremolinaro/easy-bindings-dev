for () in ENTITY_CURRENT_RELATIONSHIP_LIST do
  if mIsToMany then
%//---------------------------------------------------------------------------------------------------------------------*
//    %!["To many relationship: " + mRelationshipName stringByRightPadding !113 !' ']%*
//---------------------------------------------------------------------------------------------------------------------*

struct ToManyRelationship_%!ENTITY_NAME%_%!mRelationshipName% {
 
  var explorer : NSPopUpButton?
  var owner : %!ENTITY_NAME%?
  var mSet = Set<%![mRelationshipType key]%> ()
  var values : Array<%![mRelationshipType key]%> = Array () {
    didSet {
      if oldValue != values {
        mSet = Set (values)
      //--- Register old value in undo manager
        owner?.mUndoManager?.registerUndoWithTarget (owner!, selector:"undoFor_%!mRelationshipName%:", object:oldValue)
      //--- Update explorer
        if explorer != nil {
          owner?.updateManagedObjectToManyRelationshipDisplay (values, popUpButton:explorer!)
        }
      //--- Removed object set
        var removedObjectSet : Set<%![mRelationshipType key]%> = Set (oldValue)
        removedObjectSet.subtractInPlace (values)
        for managedObject : %![mRelationshipType key]% in removedObjectSet {
%for () in [mRelationshipType mObservablePropertyMap] do
if not mIsCollection then
%          for (key, observer) in mObserversOf_%!lkey.string% {
            managedObject.%!lkey.string%.removeObserver (observer, inTrigger:true)
          }
%end
end
%          managedObject.%!mOppositeRelationshipName%.owner = nil ;
        }
      //--- Added object set
        var addedObjectSet : Set<%![mRelationshipType key]%> = Set (values)
        addedObjectSet.subtractInPlace (oldValue)
        for managedObject : %![mRelationshipType key]% in addedObjectSet {
%for () in [mRelationshipType mObservablePropertyMap] do
if not mIsCollection then
%          for (key, observer) in mObserversOf_%!lkey.string% {
            managedObject.%!lkey.string%.addObserver (observer, inTrigger:true)
          }
%end
end
%          managedObject.%!mOppositeRelationshipName%.value = owner
        }
      //--- Notify observers object count did change
        for (key, observer) in mObservers {
          postTransientEvent (observer)
        }
      }
    }
  }

%
for () in [mRelationshipType mObservablePropertyMap] do
if not mIsCollection then
%
  //-------------------------------------------------------------------------------------------------------------------*

  private var mObserversOf_%!lkey.string% : [Int : PMTransientEventProtocol] = [:]

  mutating func addObserverOf_%!lkey.string% (inObserver : PMTransientEventProtocol, inTrigger:Bool) {
    mObserversOf_%!lkey.string% [inObserver.uniqueIndex] = inObserver
    for managedObject in values {
      managedObject.%!lkey.string%.addObserver (inObserver, inTrigger:inTrigger)
    }
  }

  mutating func removeObserverOf_%!lkey.string% (inObserver : PMTransientEventProtocol, inTrigger:Bool) {
    mObserversOf_%!lkey.string% [inObserver.uniqueIndex] = nil
    for managedObject in values {
      managedObject.%!lkey.string%.removeObserver (inObserver, inTrigger:inTrigger)
    }
  }

%
end
end
%  //-------------------------------------------------------------------------------------------------------------------*

  private var mObservers : [Int : PMTransientEventProtocol] = [:]

  mutating func addObserver (inObserver : PMTransientEventProtocol, inTrigger:Bool) {
    mObservers [inObserver.uniqueIndex] = inObserver
    if inTrigger {
      postTransientEvent (inObserver)
    }
  }

  mutating func removeObserver (inObserver : PMTransientEventProtocol, inTrigger:Bool) {
    mObservers [inObserver.uniqueIndex] = nil
    if inTrigger {
      postTransientEvent (inObserver)
    }
  }
  
  var count : Int { get { return values.count } }
}
%
  end
end

for () in ENTITY_CURRENT_RELATIONSHIP_LIST do
  if not mIsToMany then
%//---------------------------------------------------------------------------------------------------------------------*
//    %!["To one relationship: " + mRelationshipName stringByRightPadding !113 !' ']%*
//---------------------------------------------------------------------------------------------------------------------*

struct ToOneRelationship_%!ENTITY_NAME%_%!mRelationshipName% {
  var explorer : NSButton?
  var owner : %!ENTITY_NAME%?
 
  var value : %![mRelationshipType key]%? = nil {
    didSet {
      if let unwrappedOwner = owner where oldValue !== value {
      //--- Register old value in undo manager
        unwrappedOwner.mUndoManager?.registerUndoWithTarget (unwrappedOwner, selector:"undoFor_%!mRelationshipName%:", object:oldValue)
      //--- Update explorer
        if let unwrappedExplorer = explorer {
          unwrappedOwner.updateManagedObjectToOneRelationshipDisplay (value, button : unwrappedExplorer)
        }
%    if mOppositeRelationshipIsToMany then
%      //--- Reset old opposite relation ship
        if let unwrappedOldValue = oldValue {
          if unwrappedOldValue.%!mOppositeRelationshipName%.mSet.contains (unwrappedOwner) {
            var array = unwrappedOldValue.%!mOppositeRelationshipName%.values
            let idx = find (array, unwrappedOwner)
            array.removeAtIndex (idx!)
            unwrappedOldValue.%!mOppositeRelationshipName%.values = array
          }
        }
      //--- Set new opposite relation ship
        if let unwrappedValue = value {
          if !unwrappedValue.%!mOppositeRelationshipName%.mSet.contains (unwrappedOwner) {
            unwrappedValue.%!mOppositeRelationshipName%.values.append (unwrappedOwner)
          }
        }
%    else
%     //--- Reset old opposite relation ship
        oldValue?.%!mOppositeRelationshipName% = nil
      //--- Set new opposite relation ship
        %!mRelationshipName%?.%!mOppositeRelationshipName% = self
%    end
%      //--- Notify observers
        for (key, observer) in mObservers {
          postTransientEvent (observer)
        }
      }
    }
  }

  //-------------------------------------------------------------------------------------------------------------------*

  private var mObservers : [Int : PMTransientEventProtocol] = [:]

  mutating func addObserver (inObserver : PMTransientEventProtocol, inTrigger:Bool) {
    mObservers [inObserver.uniqueIndex] = inObserver
    if inTrigger {
      postTransientEvent (inObserver)
    }
  }

  mutating func removeObserver (inObserver : PMTransientEventProtocol, inTrigger:Bool) {
    mObservers [inObserver.uniqueIndex] = nil
    if inTrigger {
      postTransientEvent (inObserver)
    }
  }
}
%
  end
end
