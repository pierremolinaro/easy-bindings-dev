#——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————*
#   GENERATION TYPES                                                                                                   *
#——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————*

list @validationStubRoutineListForGeneration {
  @string mObjectTypeName
  @string mModelName
  @string mModelTypeName
}

#......................................................................................................................*

filewrapper validationStubExtension in "../generation-templates" {
}{
}{
  template actionGeneration "validation-stub-extension.swift.galgasTemplate"
    ?@string OBJECT_TYPE_NAME
    ?@string MODEL_NAME
    ?@string MODEL_TYPE_NAME
 }

#——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————*
#   GENERATION                                                                                                         *
#——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————*

proc generateValidationRoutineStubs
  ?let @string inOutputDirectory
  ?let @validationStubRoutineListForGeneration inValidationStubRoutineListForGeneration
  ?!@stringset ioGeneratedFileSet
{
  let defaultUserZone2 = "    var result = PMValidationResult.ok\n"
    + "    let validates = false // Add your validation condition here\n"
    + "    if !validates {\n"
    + "      result = PMValidationResult.rejectWithAlert (\"Rejected in \\(__FILE__), line \\(__LINE__)\")\n"
    + "    }\n"
    + "    return result\n"    
  for () in inValidationStubRoutineListForGeneration do
    let s = [filewrapper validationStubExtension.actionGeneration
      !mObjectTypeName
      !mModelName
      !mModelTypeName
    ]
    let fileName = mObjectTypeName + "+validation+" + mModelName + ".swift"
    ioGeneratedFileSet += !fileName
    [@string generateFileWithPattern
      !inOutputDirectory
      !fileName
      !"//"
      !"\n\n" # Defaut user zone1
      !s
      !defaultUserZone2
      !"  }\n}\n\n//---------------------------------------------------------------------------------------------------------------------*\n"
    ]
  end
}

